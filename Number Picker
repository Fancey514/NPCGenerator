    // Set UI
    @Override
    public void start(Stage primaryStage) {

        
        firstSet = new Label("First Set of Numbers");
        HBox firstLabelBox = new HBox(firstSet);
        firstLabelBox.setAlignment(Pos.CENTER);
        
        firstFirstLabel = new Label("First Number");
        firstFirst = new TextField();
        firstFirst.setMaxWidth(20);
        VBox fFV = new VBox(10, firstFirstLabel, firstFirst);
        fFV.setAlignment(Pos.CENTER);
        
